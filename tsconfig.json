{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "api/*": ["api/*"]
    }
  },
  "exclude": ["node_modules", "prisma/**/*"],
  "include": ["api", "types.d.ts", "api/seed.ts"],
  "compileOnSave": false
}
