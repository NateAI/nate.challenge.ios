{
  "private": true,
  "version": "1.0.0",
  "name": "nate.challenge.ios",
  "scripts": {
    "dev": "concurrently \"yarn dev:graph\" \"yarn dev:rest\"",
    "dev:graph": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only -r tsconfig-paths/register api/graph.ts",
    "dev:rest": "ts-node-dev -r tsconfig-paths/register api/rest.ts",
    "build": "yarn -s clean && yarn -s generate && tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "generate": "yarn -s generate:prisma && yarn -s generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only api/schema/schema",
    "start": "concurrently \"yarn start:graph\" \"yarn start:rest\"",
    "start:graph": "node .nexus/build/api",
    "start:rest": "ts-node -r tsconfig-paths/register api/rest.ts",
    "lint": "eslint '*/**/*.{js,ts}'",
    "format": "yarn lint --quiet --fix",
    "setup": "yarn migrate-new && yarn seed",
    "migrate-new": "npx prisma migrate dev --name init",
    "migrate-old": "prisma migrate save --experimental -c && prisma migrate up --experimental -c",
    "seed": "npx prisma db seed",
    "up": "docker-compose up -d --build",
    "down": "docker-compose down"
  },
  "prisma": {
    "seed": "ts-node api/seed.ts"
  },
  "engines": {
    "node": ">=12.2.0"
  },
  "dependencies": {
    "@kenchi/nexus-plugin-prisma": "^0.40.0",
    "@prisma/client": "3.6.x",
    "apollo-server": "3.6.3",
    "cors": "2.8.5",
    "express": "4.17.3",
    "graphql": "^15.4.0",
    "graphql-scalars": "1.14.1",
    "nexus": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/node": "15.6.x",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "concurrently": "7.0.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.5.1",
    "prisma": "3.6.0",
    "ts-node": "10.5.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.5"
  }
}
